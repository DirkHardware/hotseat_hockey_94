<%if @season.picks.length == 48%>
<%= "The draft has concluded."%>
<%else%>
  <%if @season.draft.username == current_user.username%>
  <h2><%="You are on the clock."%></h2>
  <%else%>
  <h2><%="The #{@season.draft.team.name} are on the clock."%></h2>
  <%end%>
<%end%>
<br/>
<br/>
<div class="pick_table"><table align="center">                                                
  <tr>                          
    <th>Team Name</th>
    <th>Team Coach</th>
    <th>Forwards (6 Max)</th>
    <th>Defensemen (4 Max)</th>
    <th>Goalies (2 Max)</th>
  </tr>

<%@season.users[1..4].each do |user|%>     
  <tr>
    <td><%= link_to user.team.name, user_path(user.id) %></td>
    <td><%= user.username %></td>    
    <td><%= user.forwards%></td> 
    <td><%= user.defensemen%></td>  
    <td><%= user.goalies%></td>
  </tr>
<% end %>                        
</table></div><br/>       

<%@player_hash = @players.group_by do |player|%>
  <%player.position%>
<%end%>
<%@player_hash.keys.each do |key| %>
<div id="position_table">
<table>  
    <tr>                          
      <th>Name</th>
      <th>Rating</th>
      <th>Position</th>
    </tr>
<%@player_hash[key].each do |player|%>     
    <tr>
      <td><%= player.name %></td>  
      <td><%= player.rating %></td> 
      <td><%= player.position %></td>  
    </tr>
  <% end %>                        
  </table>   
  </div>
  <%end%>      

  

